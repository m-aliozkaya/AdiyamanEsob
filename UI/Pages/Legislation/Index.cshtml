@page "/mevzuatlar"
@model UI.Pages.Legislation.Index

@section HeaderTitle
{
    <!-- Page Title
    ============================================= -->
    <section id="page-title">
        <div class="container clearfix">
            <h1>Mevzuatlar</h1>
            <span>Mevzuatlarımız</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Mevzuatlar</li>
            </ol>
        </div>
    </section><!-- #page-title end -->
}

<div class="container col-8">
    <ul class="list-group">
        @foreach (var item in Model.Legislation)
        {
            <li class="list-group-item">
                <a href="/mevzuatlar/@item.SeoUrl">
                    @item.Title
                </a>         
            </li>
        }
    </ul>
</div>