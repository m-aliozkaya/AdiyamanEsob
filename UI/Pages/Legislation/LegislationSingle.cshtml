@page "/mevzuatlar/{seoUrl}"
@model UI.Pages.Legislation.LegislationSingle

@{
    ViewData["Title"] = Model.Legislation.Title;
}

@section HeaderTitle
{
    <!-- Page Title
    ============================================= -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>Mevzuatlar</h1>
            <span>@Model.Legislation.Title</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Legislation.Title</li>
            </ol>
        </div>

    </section><!-- #page-title end -->
}

<!-- Post Content
============================================= -->
<div class="postcontent col-lg-8 container">

    <div class="single-post mb-0">

        <!-- Single Post
        ============================================= -->
        <div class="entry clearfix">

            <!-- Entry Title
            ============================================= -->
            <div class="entry-title">
                <h2>@Model.Legislation.Title</h2>
            </div><!-- .entry-title end -->

            <!-- Entry Content
            ============================================= -->
            <div class="entry-content mt-0">
                @Html.Raw(Model.Legislation.Content)
            </div>
        </div><!-- .entry end -->

    </div>

</div><!-- .postcontent end -->