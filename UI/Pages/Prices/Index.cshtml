                </span>
                <span class="accicon">
                    <i class="icon-angle-down rotate-icon"></i>
                </span>
            </div>
            <div id="price-@item.Id" class="collapse" data-parent="#accordionBranch">
                <div class="card-body">
                    <p class="mb-1">
                        <b>Karar Tarihi: </b>@item.DecisionDate.ToShortDateString()
                    </p>
                    <p class="mb-1">
                        <b>Karar Sayısı: </b>@item.DecisionNumber
                    </p>
                    <p>
                        @Html.Raw(item.Content)
                    </p>
                </div>
            </div>
        </div>
    }
</div>