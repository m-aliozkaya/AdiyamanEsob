@page
@model IndexModel
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container">
    <!-- Hero Area
    ============================================= -->
    <div class="row border-between">
        @await Component.InvokeAsync("NewsComponent")
        @await Component.InvokeAsync("AnnouncementComponent")
    </div> <!-- Hero Area End -->

</div>

<div class="container">
    <!-- Subscribe Section
    ============================================= -->
    <div class="section section-colored rounded px-4">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-5">
                <h3 class="mb-4 mb-lg-0">Güncellemeleri ve duyuruları kaçırma!</h3>
            </div>
            <div class="col-lg-6">
                <div class="widget subscribe-widget" data-loader="button">

                    <div class="widget-subscribe-form-result"></div>
                    <form id="widget-subscribe-form" onsubmit=" this.reset(); return false;" class="mb-0 d-flex">
                        <input type="email" id="widget-subscribe-form-email" name="widget-subscribe-form-email" class="form-control form-control-lg not-dark email" placeholder="Email adresi">
                        <button class="button button-large button-black button-dark font-weight-medium ls0 button-rounded m-0 ml-3" type="submit">Şimdi Abone Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- Subscribe Section End -->
</div>

<div class="section dark" style="padding: 100px 0;">

    <div class="container">
        <div class="heading-block mw-xs mx-auto text-center mb-6">
            <h3 class="text-white nott ls0">Hızlı Erişim</h3>
        </div>
        <div class="row services-grid gutter-30 position-relative">
            <div style="background-image: url(assets/demos/finance/images/grid.svg); position: absolute; top: 50%; left: 50%; width: 50vw; height: 50vh; opacity: .15; transform: translate(-50%, -50%);"></div>
            <img class="op-05" src="assets/demos/finance/images/grid.svg" alt="Grid Image" style="position: absolute; left: -20px; top: -30px; z-index: -1;">

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#2646532b, #264653f7), url('assets/demos/finance/images/services/1.jpg')">
                    <a href="/fiyat-tarifeleri">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-dollar-sign color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Fiyat Tarifeleri</h4>
                            <p>
                                Güncel fiyat tarifelerine bakabilirsiniz.
                            </p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#2646532b, #264653f7), url('assets/demos/finance/images/services/2.jpg')">
                    <a href="/genelgeler">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-paper color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Genelgeler</h4>
                            <p>Genelgelerimizi bu linkten hızlı bir şekilde ulaşabilirsiniz.</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#264653A8, #264653), url('assets/demos/finance/images/services/3.jpg')">
                    <a href="/odalar">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-flag color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Odalar</h4>
                            <p>Esnaf odalarımıza bu linkten ulaşabilirsiniz.</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#26465398, #264653), url('assets/demos/finance/images/services/4.jpg')">
                    <a href="/blog/esnaf-olma-sartlari">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-users color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Esnaf Olma Şartları</h4>
                            <p>AESOB | Esnaf olmanın şartları Nelerdir?</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#264653A8, #264653), url('assets/demos/finance/images/services/5.jpg')">
                    <a href="/organizasyon/yonetim-kurulu-uyeleri">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-globe color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Yönetim Kurulu Üyeleri</h4>
                            <p>Yönetim kurulu üyelerini görüntüleyin.</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 d-flex align-self-stretch">
                <div class="feature-box flex-column h-shadow mx-0 w-100" style="background-image: linear-gradient(#26465398, #264653), url('assets/demos/finance/images/services/6.jpg')">
                    <a href="/projeler">
                        <div class="fbox-icon mb-4">
                            <i class="icon-line-briefcase color-2"></i>
                        </div>
                        <div class="fbox-content">
                            <h4 class="font-body font-weight-semibold h4 mb-4 mt-2 ls0 nott">Projelerimiz</h4>
                            <p>Yaptığımız projelere bir göz atın!</p>
                        </div>
                    </a>
                </div>
            </div>
            <img src="assets/demos/finance/images/grid.svg" alt="Grid Image" class="op-05" style="position: absolute; right: -20px; bottom: 0; z-index: -1;">

        </div>
    </div>

</div>

@await Component.InvokeAsync("VideoComponent")
@await Component.InvokeAsync("BlogComponent")

<div class="container clearfix">

    <div class="row col-mb-80">
        @await Component.InvokeAsync("FaqComponent")
        @await Component.InvokeAsync("RightBarComponent")
    </div>

</div>

@section Scripts
{
    <script>
            jQuery(window).on('load', function () {
                var swiperParent = new Swiper('.swiper-parent', {
                    slidesPerView: 1,
                    pagination: {
                        clickable: false
                    },
                    grabCursor: true,
                    navigation: {
                        prevEl: '.slider-arrow-left',
                        nextEl: '.slider-arrow-right'
                    },
                });
            });
        </script>
}