@page "/haberler/{seoUrl}"
@model UI.Pages.News.NewsSingle

@{
    ViewData["Title"] = Model.News.Title;
    ViewData["Description"] = Model.News.Description;
}

@section HeaderTitle
{
    <!-- Page Title
    ============================================= -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>Haberler</h1>
            <span>@Model.News.Title</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">Anasayfa</a>
                </li>
                <li class="breadcrumb-item" aria-current="page">
                    <a href="/haberler">
                        Haberler
                    </a> 
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.News.Title</li>
            </ol>
        </div>

    </section><!-- #page-title end -->
}

<!-- Post Content
============================================= -->
<div class="postcontent col-lg-8 container">

    <div class="single-post mb-0">

        <!-- Single Post
        ============================================= -->
        <div class="entry">

            <!-- Entry Title
            ============================================= -->
            <div class="entry-title">
                <h2>@Model.News.Title</h2>
            </div><!-- .entry-title end -->

            <!-- Entry Meta
            ============================================= -->
            <div class="entry-meta">
                <ul>
                    <li>
                        <i class="icon-calendar3"></i>@Model.News.CreationDate.ToShortDateString()
                    </li>
                </ul>
            </div><!-- .entry-meta end -->

            <!-- Entry Image
            ============================================= -->
            <div class="entry-image">
                <img class="img-fluid" src="/upload/news/medium/@Model.News.Image" alt="@Model.News.Title">
            </div><!-- .entry-image end -->

            <!-- Entry Content
            ============================================= -->
            <div class="entry-content mt-0">
                @Html.Raw(Model.News.Content)
            </div>
        </div><!-- .entry end -->

    </div>

</div><!-- .postcontent end -->