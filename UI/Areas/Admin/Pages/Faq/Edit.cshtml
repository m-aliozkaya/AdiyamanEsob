@page "{id:int?}"
@model UI.Areas.Admin.Pages.Faq.Edit

@{
    ViewData["Title"] = "SSS " + ViewData["ActionName"];
}
<style>
    .ck-editor__editable_inline {
        min-height: 250px;
    }
</style>
<form class="col-md-8 container" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Faq.Id"/>
    <h1 class="mb-5 mt-2">SSS @ViewData["ActionName"]</h1>
    <div class="form-group">
        <label asp-for="Faq.Title"></label>
        <input asp-for="Faq.Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="Faq.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Faq.Content"></label>
        <textarea asp-for="Faq.Content" class="form-control editor"></textarea>
        <span class="text-danger" asp-validation-for="Faq.Content"></span>
    </div>
    <div class="form-group">
            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                @Html.CheckBoxFor(model => model.Faq.IsActive, new { @class = "custom-control-input", @id = "customSwitch2" })
                <label class="custom-control-label" for="customSwitch2">Durum</label>
            </div>
        </div>
    <div class="row m-0">
        <a href="/admin/faq/" class="btn btn-secondary ml-auto">Geri DÃ¶n</a>
        <button type="submit" class="btn btn-success ml-2">
            @ViewData["ActionName"]
        </button>
    </div>
</form>
@section scripts{

    <script src="/admin/plugins/ck-editor-5/ckeditor.js"></script>

    <script>
    $(function () {
        let allEditors = document.querySelectorAll('.editor');
        for (let i = 0; i < allEditors.length; ++i) {
            ClassicEditor
                .create(allEditors[i])
                .then(editor => {
                    window.editor = editor;
                })
                .catch(error => {
                });
        }
    });
</script>

}