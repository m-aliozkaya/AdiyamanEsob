@page "{id:int?}"
@model UI.Areas.Admin.Pages.ActivityField.Edit

@{
    ViewData["Title"] = "Faaliyet Alanı " + ViewData["ActionName"];
}

<form class="col-md-8 container" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ActivityField.Id"/>
    <h1 class="mb-5 mt-2">Faaliyet Alanı @ViewData["ActionName"]</h1>
    <div class="form-group">
        <label asp-for="ActivityField.Title"></label>
        <input asp-for="ActivityField.Title" class="form-control">
        <span asp-validation-for="ActivityField.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActivityField.Description"></label>
        <textarea asp-for="ActivityField.Description" class="form-control"></textarea>
        <span asp-validation-for="ActivityField.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActivityField.Content"></label>
        <textarea asp-for="ActivityField.Content" class="form-control editor"></textarea>
        <span asp-validation-for="ActivityField.Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
            @Html.CheckBoxFor(model => model.ActivityField.IsActive, new { @class = "custom-control-input", @id = "customSwitch2" })
            <label class="custom-control-label" for="customSwitch2">Durum</label>
        </div>
    </div>
    <div class="row m-0">
        <a href="/admin/activityField" class="btn btn-secondary ml-auto">Geri Dön</a>
        <button type="submit" class="btn btn-success ml-2">
            @ViewData["ActionName"]
        </button>
    </div>
</form>

@section scripts{

    <script src="/admin/plugins/ck-editor-5/ckeditor.js"></script>

    <script>      
    $(function () {
        let allEditors = document.querySelectorAll('.editor');
        for (let i = 0; i < allEditors.length; ++i) {
            ClassicEditor
                .create(allEditors[i])
                .then(editor => {
                    window.editor = editor;
                })
                .catch(error => {
                });
        }
    });
    </script>
}