@page "{id:int?}"
@model UI.Areas.Admin.Pages.Circular.Edit

@{
    ViewData["Title"] = "Genelge Düzenle";
}

<form class="col-md-8 container" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Circular.Id"/>
    <input type="hidden" asp-for="Circular.File"/>
    <h1 class="mb-5 mt-2">Genelge @ViewData["ActionName"]</h1>
    <div class="form-group">
        <label asp-for="Circular.Title"></label>
        <input asp-for="Circular.Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="Circular.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Circular.Year"></label>
        <input asp-for="Circular.Year" class="form-control"/>
        <span class="text-danger" asp-validation-for="Circular.Year"></span>
    </div>
    <div class="form-group">
        <label asp-for="UploadFile" class="d-block"></label>
        <input type="file" asp-for="UploadFile"/>
        <span class="text-danger" asp-validation-for="UploadFile"></span>
    </div>
    @if (!string.IsNullOrEmpty(Model.Circular.File))
    {
        <div class="form-group">
            <a class="btn btn-primary" href="/upload/circular/@Model.Circular.File" target="_blank">
                Yüklü dosyayı göster
            </a>
        </div>
    }
    <div class="row m-0">
        <a href="/admin/circular/" class="btn btn-secondary ml-auto">Geri Dön</a>
        <button type="submit" class="btn btn-success ml-2">
            @ViewData["ActionName"]
        </button>
    </div>
</form>