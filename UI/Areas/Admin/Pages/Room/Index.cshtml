@page
@model UI.Areas.Admin.Pages.Room.Index

<section class="content">
    <!-- Default box -->
    <div class="d-flex justify-content-end mb-4">
        <a href="/admin/room/edit" class="btn btn-success">Yeni Oda Ekle</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <b class="text-danger">Odalar</b>
            </h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects table-responsive">
                <thead>
                <tr>
                    <th style="width: 200px" class="text-center">
                        IsCentre
                    </th>
                    <th style="width: 200px" class="text-center">
                        Title
                    </th>
                    <th style="width: 6%" class="text-center">
                        Leader
                    </th>
                    <th style="width: 150px" class="text-center">
                        Secretary
                    </th>
                    <th style="width: 150px" class="text-center">
                        Address
                    </th>
                    <th style="width: 150px" class="text-center">
                        Phone
                    </th>
                    <th style="width: 150px" class="text-center">
                        Fax
                    </th>
                    <th style="width: 150px" class="text-center">
                        Website
                    </th>

                    <th style="width: 10%">
                    </th>
                </tr>
                </thead>
                <tbody>

                @foreach (var item in Model.Rooms)
                {
                    <tr>
                        <td class="project-state align-middle">
                            @if (item.IsCentre)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Aktif deÄŸil</span>
                            }
                        </td>
                        <td class="align-middle">
                            @item.Title
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Leader
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Secretary
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Address
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Phone
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Fax
                            <br/>
                        </td>
                        <td class="align-middle">
                            @item.Website
                            <br/>
                        </td>

                        <td class="project-actions text-right align-middle text-center" style="min-width:300px">
                            <a class="btn btn-info btn-sm" href="/admin/room/edit/@item.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" href="/admin/room/delete/@item.Id">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>