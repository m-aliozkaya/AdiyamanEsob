@page "{seoUrl}"
@model UI.Areas.Admin.Pages.Announcement.Detail

@{
    ViewData["Title"] = Model.Announcement.Title + " Detay";
}

<div class="container col-md-8">
    <section>
        <div class="container section-padding pb-0">
            <div id="blog-detail">
                <div class="blog-header mb-4">
                    <h1 class="mb-0 date mb-2">@Model.Announcement.Title</h1>
                    <div class="text-muted">
                        <i class="far fa-calendar-alt mr-2"></i>
                        @Model.Announcement.CreationDate.ToShortDateString()
                    </div>
                    <img src="/upload/announcement/medium/@Model.Announcement.Image" class="img-fluid mt-2" alt="@Model.Announcement.Title"/>
                </div>
                <p>
                    @Html.Raw(Model.Announcement.Content)
                </p>
            </div>
            <div class="row m-0">
                <a href="/admin/announcement" class="btn btn-secondary ml-auto">Geri Dön</a>
                <a href="/admin/announcement/edit/@Model.Announcement.Id" class="btn btn-success ml-2">
                    Düzenle
                </a>
            </div>
        </div>
    </section>
</div>